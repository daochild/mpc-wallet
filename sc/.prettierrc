{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "compiler": "0.8.25",
        "parser": "solidity-parse",
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "prettier"
      ],
      "files": "*.ts",
      "options": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 4
      }
    }
  ]
}
